---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Props from the astro page
// export interface Props {
// 	content: {
// 		title: string;
// 		description: string;
//     image: string;
// 	};
// }

const {
 title, description, image
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
    />
  </head>
  <body>
    <!-- Navagation Bar -->
    <Header />

    <!-- All the pages data goes here -->
    <div id="main">
        <slot />
    </div>

    <!-- Footer Content -->
    <Footer />
  </body>
</html>
